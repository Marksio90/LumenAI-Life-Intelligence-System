# LumenAI Mamba/Conda Configuration
# Place this in your home directory as ~/.mambarc or ~/.condarc

# Use conda-forge as primary channel
channels:
  - conda-forge
  - defaults

# Channel priority
channel_priority: strict

# Show channel URLs
show_channel_urls: true

# Auto-activate base environment
auto_activate_base: false

# Always use pip when installing packages that are only available via pip
pip_interop_enabled: true

# Solver settings (for better performance)
solver: libmamba

# Environment settings
envs_dirs:
  - ~/miniforge3/envs
  - ~/.conda/envs

# Package cache
pkgs_dirs:
  - ~/miniforge3/pkgs
  - ~/.conda/pkgs

# Report errors
report_errors: true

# Verify SSL
ssl_verify: true

# Auto update
auto_update_conda: false
