# LumenAI Environment Configuration
# Copy this file to .env and fill in your values

# ===== Application Settings =====
DEBUG=False
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-in-production

# ===== API Settings =====
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ===== LLM Provider Settings =====
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Default LLM Configuration
DEFAULT_LLM_PROVIDER=openai

# Model Selection - Use CHEAP models! ðŸ’°
DEFAULT_MODEL=gpt-4o-mini        # Default: Cheap & good (75x cheaper than GPT-4)
SMART_MODEL=gpt-4o               # Complex tasks: Best balance
FAST_MODEL=gpt-3.5-turbo         # Ultra fast: Cheapest

# Cost Optimization
ENABLE_SMART_ROUTING=true        # Auto-select cheapest model for task
MAX_TOKENS_DEFAULT=1000          # Token limit for default model
MAX_TOKENS_SMART=2000            # Token limit for smart model
ENABLE_RESPONSE_CACHE=true       # Cache responses to save API calls
CACHE_TTL_SECONDS=3600           # Cache lifetime (1 hour)

# ===== Vector Database =====
CHROMA_HOST=localhost
CHROMA_PORT=8001
VECTOR_DB_PATH=./backend/data/vectordb

# ===== Redis Cache =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===== MongoDB =====
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=lumenai

# ===== ML Settings =====
ML_MODEL_PATH=./backend/ml/models
ENABLE_PERSONALIZATION=true
WHISPER_MODEL=base

# ===== Multimodal Features =====
ENABLE_VOICE=true
ENABLE_VISION=true
ENABLE_OCR=true

# ===== External Integrations =====
GOOGLE_CALENDAR_ENABLED=false
NOTION_API_KEY=
GMAIL_ENABLED=false

# ===== Logging =====
LOG_LEVEL=INFO
LOG_PATH=./backend/data/logs

# ===== Frontend Settings =====
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
