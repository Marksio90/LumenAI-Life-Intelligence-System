# LumenAI - Environment Configuration
# Copy this file to .env and fill in your values

# ================================
# APP CONFIGURATION
# ================================
APP_NAME="LumenAI"
APP_VERSION="2.0.0"
ENVIRONMENT="development"

# ================================
# DATABASE - MongoDB
# ================================
MONGODB_URL="mongodb://localhost:27017"
MONGODB_DB_NAME="lumenai"

# ================================
# VECTOR DATABASE - ChromaDB
# ================================
CHROMA_HOST="localhost"
CHROMA_PORT="8000"

# ================================
# AI / LLM PROVIDERS
# ================================
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4"
ANTHROPIC_API_KEY="sk-ant-..."

# ================================
# EXTERNAL INTEGRATIONS
# ================================
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-secret"
NOTION_API_KEY="secret_..."
TODOIST_API_KEY="..."

# ================================
# FRONTEND
# ================================
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_WS_URL="ws://localhost:8000"

# ================================
# SECURITY
# ================================
# CRITICAL: SECRET_KEY is REQUIRED and must be at least 32 characters
# Generate a secure random key using one of these methods:
#   - openssl rand -hex 32
#   - python3 -c "import secrets; print(secrets.token_hex(32))"
#   - node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# NEVER use default values like "change-this-in-production" in production!
# Example (DO NOT USE THIS - generate your own):
SECRET_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# CORS - JSON array format for pydantic
# In production, replace with your actual domain(s)
ALLOWED_ORIGINS='["http://localhost:3000","http://localhost:8000"]'

# ================================
# FEATURE FLAGS
# ================================
ENABLE_STREAMING="true"
ENABLE_VOICE_INPUT="true"
ENABLE_NOTIFICATIONS="true"
